<div class="container d-flex justify-content-center mt-5">
<div class="row">

<%= form_with model: @journalist, method: :post do |form| %>
    <div class="">
        <div>
            <%= form.label :name, "Ingrese su nombre", class: "form-label"%>
            <%= form.text_field :name, class: "form-control" %>
        </div>

        <div>
            <%= form.label :lastname, "Ingrese su apellido", class:"form-label" %>
            <%= form.text_field :lastname, class: "form-control" %>
        </div>

        <div>
            <%= form.label :speciality, "Ingrese su especialidad", class:"form-label" %>
            <%= form.text_field :speciality, class: "form-control" %>
        </div>

        <div class="mt-3">
            <%= form.submit "Enviar", class: "btn btn-primary" %>
        </div>
    </div>

</div>
</div>
<% end %>
